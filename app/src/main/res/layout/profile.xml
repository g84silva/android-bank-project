<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E18100" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_image_profile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            app:cardCornerRadius="40dp" >

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="200dp"
                android:layout_height="200dp" />
        </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/username_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paulo Romero Veloso"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:paddingTop="40dp"
                android:layout_below="@id/card_image_profile"/>

            <TextView
                android:id="@+id/branch_bank_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AgÃªncia: 001"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:paddingTop="10dp"
                android:layout_below="@id/username_profile"/>

            <TextView
                android:id="@+id/account_number_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conta: 123-456"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:layout_below="@id/branch_bank_profile"/>

            <TextView
                android:id="@+id/account_stauts_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Bloqueado"
                android:textStyle="italic"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:layout_below="@id/account_number_profile"/>

            <Button
                android:id="@+id/button_profile"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="ENCERRAR CONTA"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20dp"
                android:background="@drawable/radius_button_profile"
                android:layout_marginTop="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/account_stauts_profile"
                android:onClick="closeAccount"/>

            <TextView
                android:id="@+id/exit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sair da minha conta"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:paddingTop="30dp"
                android:layout_below="@id/button_profile"
                android:onClick="logout"/>

    </RelativeLayout>

</LinearLayout>