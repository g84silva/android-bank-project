<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:id="@+id/login_page">

    <EditText
        android:id="@+id/cpf_page_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="CPF"
        android:maxLines="1"
        android:maxLength="15"
        android:inputType="number"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" 
    />
    
    <EditText
        android:id="@+id/password_page_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:maxLines="1"
        android:maxLength="10"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cpf_page_login" 
    />
    
    <Button
        android:id="@+id/button_page_login"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:background="@drawable/radius_button"
        android:text="ENTRAR"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_page_login" 
    />
    
    <TextView
        android:id="@+id/register_page_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ã‰ novo por aqui? Cadastre-se!"
        android:textStyle="bold"
        android:textColor="#707070"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_page_login" 
    />
</androidx.constraintlayout.widget.ConstraintLayout>